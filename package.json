{
  "name": "krogue",
  "description": "A roguelike videogame",
  "version": "0.0.1",
  "license": "MIT",
  "main": "lib/index.js",
  "private": true,
  "author": "Raymond Hammarling",
  "scripts": {
    "lint": "coffeelint --reporter ./lint-reporter.coffee -q src/",
    "build:all": "npm run build && npm run build:web",
    "prebuild": "npm run lint",
    "build": "coffee -c -o lib/ src/",
    "prebuild:web": "npm run lint",
    "build:web": "mkdirp public/lib/ && browserify -t coffeeify --extension=\".coffee\" -d -o public/lib/main.js src/web-client/index.coffee",
    "serve": "http-server -p 80",
    "livereload": "livereload ./public",
    "watch": "onchange src/ -- npm run build && echo Done",
    "watch:web": "onchange src/ -- npm run build:web && echo Done",
    "dev": "parallelshell \"npm run watch:web\" \"npm run livereload\" \"npm run serve\"",
    "prepublish": "npm run build",
    "start": "coffee ."
  },
  "devDependencies": {
    "browserify": "^10.2.6",
    "coffee-script": "^1.9.3",
    "coffeeify": "^1.1.0",
    "coffeelint": "^1.10.1",
    "http-server": "^0.8.0",
    "livereload": "^0.3.7",
    "mkdirp": "^0.5.1",
    "onchange": "^1.1.0",
    "parallelshell": "^1.2.0"
  },
  "dependencies": {
    "a-star": "^0.2.0",
    "async": "^0.9.0",
    "blessed": "^0.1.5",
    "bluebird": "^2.9.34",
    "collections": "^1.2.3",
    "eventemitter2": "^0.4.14",
    "lodash": "^3.10.0",
    "mersennetwister": "^0.2.0",
    "mkdirp": "^0.5.0",
    "ranged-value": "^1.0.1",
    "rl-directions": "^1.0.1",
    "rl-time-manager": "^1.1.0",
    "traverse": "^0.6.6",
    "winston": "^0.7.3",
    "wordwrap": "0.0.2",
    "yargs": "^1.3.1"
  }
}
