{
  "name": "krogue",
  "description": "A roguelike videogame",
  "version": "0.0.1",
  "license": "MIT",
  "main": "lib/index.js",
  "private": true,
  "author": "Raymond Hammarling",
  "scripts": {
    "lint": "eslint src/",
    "build": "babel -d lib/ src/",
    "build:web": "mkdirp public/lib/ && browserify -t babelify -d -o public/lib/main.js src/web-client/index.js",
    "serve": "http-server -p 80",
    "livereload": "livereload ./public",
    "start": "babel-node .",
    "build:all": "npm run build && npm run build:web",
    "watch": "onchange src/ -- npm run build && echo Done",
    "watch:web": "onchange src/ -- npm run build:web && echo Done",
    "dev": "parallelshell \"npm run watch:web\" \"npm run livereload\" \"npm run serve\"",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^5.0.0-beta5",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "eslint": "^1.10.3",
    "eslint-config-kellyirc": "^3.1.0",
    "http-server": "^0.8.0",
    "livereload": "^0.3.7",
    "mkdirp": "^0.5.1",
    "onchange": "^1.1.0",
    "parallelshell": "^1.2.0"
  },
  "dependencies": {
    "a-star": "^0.2.0",
    "async": "^0.9.0",
    "blessed": "^0.1.5",
    "bluebird": "^2.9.34",
    "collections": "^1.2.3",
    "eventemitter2": "^0.4.14",
    "lodash": "^3.10.0",
    "mersennetwister": "^0.2.0",
    "mkdirp": "^0.5.0",
    "ranged-value": "^1.0.1",
    "rl-directions": "^1.0.1",
    "rl-time-manager": "^1.1.0",
    "traverse": "^0.6.6",
    "winston": "^0.7.3",
    "wordwrap": "0.0.2",
    "yargs": "^1.3.1"
  }
}
