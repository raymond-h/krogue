{
  "name": "krogue",
  "description": "A roguelike videogame",
  "version": "0.0.0",
  "license": "MIT",
  "main": "lib/index.js",
  "private": true,
  "author": "Raymond Hammarling",
  "scripts": {
    "lint": "coffeelint src/",
    "build": "coffee -c -o lib/ src/",
    "build-web": "npm run build && mkdirp public/lib/ && browserify -d -o public/lib/main.js lib/web-client/index.js",
    
    "serve": "http-server -p 80",
    "livereload": "livereload ./public",
    "watch": "watch \"npm run build-web\" src/",

    "dev": "parallelshell \"npm run watch\" \"npm run livereload\" \"npm run serve\"",
    
    "prepublish": "npm run build",
    "start": "coffee ."
  },
  "devDependencies": {
    "browserify": "^10.2.6",
    "coffee-script": "^1.9.3",
    "coffeelint": "^1.10.1",
    "http-server": "^0.8.0",
    "livereload": "^0.3.7",
    "mkdirp": "^0.5.1",
    "parallelshell": "^1.2.0",
    "watch": "^0.16.0"
  },
  "dependencies": {
    "blessed": "^0.1.5",
    "async": "^0.9.0",
    "lodash": "^2.4.1",
    "eventemitter2": "^0.4.14",
    "mersennetwister": "^0.2.0",
    "winston": "^0.7.3",
    "mkdirp": "^0.5.0",
    "yargs": "^1.3.1",
    "wordwrap": "0.0.2",
    "traverse": "^0.6.6",
    "a-star": "^0.2.0",
    "bluebird": "^2.9.25"
  }
}
